server {
        listen       80;
        server_name  klaus.andromeda.home;
        rewrite ^ https://$http_host$request_uri? permanent;    # force redirect http to https
}

server {
        listen 443;
        ssl on;
        ssl_certificate        /etc/nginx/certs/andromeda.home/server.crt;
        ssl_certificate_key    /etc/nginx/certs/andromeda.home/server.key;

	error_log /var/log/nginx/klaus.error.log;
	access_log /var/log/nginx/klaus.access.log;

        server_name klaus.andromeda.home;
        location / {
		include uwsgi_params;
		uwsgi_pass unix:///tmp/klaus.sock; 
        }                                                                   
}
